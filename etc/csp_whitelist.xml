<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp/etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="ctiapi-src" type="host">ctiapi.com</value>
                <value id="opgtest-src" type="host">opgtest.com</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="ctiapi-css" type="host">ctiapi.com</value>
                <value id="opgtest-css" type="host">opgtest.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="ctiapi-api" type="host">ctiapi.com</value>
                <value id="opgtest-api" type="host">opgtest.com</value>
            </values>
        </policy>
        <policy id="form-action">
            <values>
                <value id="ctiapi-api-form" type="host">ctiapi.com</value>
                <value id="opgtest-api" type="host">opgtest.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="ctiapi-images" type="host">ctiapi.com</value>
                <value id="opgtest-images" type="host">opgtest.com</value>
                <value id="ctiapi-s3-images" type="host">s3.amazonaws.com</value>
                <value id="youtube" type="host">youtube.com</value>
            </values>
        </policy>
        <policy id="object-src">
            <values>
                <value id="ctiapi-object" type="host">ctiapi.com</value>
                <value id="opgtest-object" type="host">opgtest.com</value>
                <value id="ctiapi-s3-objects" type="host">s3.amazonaws.com</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <value id="ctiapi-font" type="host">ctiapi.com</value>
                <value id="opgtest-font" type="host">opgtest.com</value>
                <value id="ctiapi-s3-fonts" type="host">s3.amazonaws.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
