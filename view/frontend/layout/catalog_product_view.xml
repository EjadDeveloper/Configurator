<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <script src="//ctiapi.com/js/angular-app/widget/cti-widget.js" src_type="url"/>
    </head>
    <body>
        <referenceContainer name="content">
            <block class="Magento\Catalog\Block\Product\View"
                   name="product.view.angular"
                   template="Ctech_Configurator::product/view/angular.phtml"
                   before="reviews">
            </block>
            <referenceContainer name="product.info.form.content">
                <block class="Magento\Catalog\Block\Product\View" name="product.info.addtocart" as="addtocart" template="Ctech_Configurator::product/view/addtocart.phtml"/>
            </referenceContainer>
        </referenceContainer>
    </body>
</page>